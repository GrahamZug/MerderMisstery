struct Point {
	x: int,
	y: int,

	fn constructor(x: int, y: int) {
		this.x = x;
		this.y = y;
	}

	fn manhattan_len(): int {
		return this.x + this.y;
	}

	fn sqr_len(): int {
		return this.x * this.x + this.y * this.y;
	}

	fn print() {
		print_s("Point(");
		print_i(this.x);
		print_s(", ");
		print_i(this.y);
		print_s(")");
	}
}

fn main() {
	let p = new Point(5, 10);
	print_s("p = ");
	p.print();
	println_s("");

	p.x = p.x * 5;
	print_s("now p = ");
	p.print();
	println_s("");

	print_s("manhattan length of ");
	p.print();
	print_s(" = ");
	println_i(p.manhattan_len());

	print_s("squared length of ");
	p.print();
	print_s(" = ");
	println_i(p.sqr_len());
}